@model IEnumerable<todo.Models.Item>;

@{
    ViewBag.Title = "Song Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- <img src="../../wwwroot/images/logo.png"/> -->

<h2>Song requests</h2>

<p class="button">
    @Html.ActionLink("Request a new song", "Create")
</p>

<table class="table">
    <tr>
        <th>
            <p>Artist name</p>
        </th>
        <th>
            <p>Song name</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Remove", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
